<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Contacts" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
    </style>

    <style name="ContactsName" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ContactsDetailName" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ContactsListName" parent="TextAppearance.MaterialComponents.Headline5"/>
    <style name="ContactsListPhone" parent="TextAppearance.MaterialComponents.Headline6"/>

    <style name="ContactsDetailPhoneNumber" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Contacts.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>